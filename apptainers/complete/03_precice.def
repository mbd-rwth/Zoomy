Bootstrap: localimage
From: ./02_petsc.sif

%environment
    export PETSC_DIR=/petsc 
    export PETSC_ARCH=arch-linux-c-debug check


%post -c /bin/bash
    apt install libeigen3-dev libxml2-dev libboost-all-dev
    wget https://github.com/precice/precice/releases/download/v3.1.2/libprecice3_3.1.2_jammy.deb
    yes | apt install ./libprecice3_3.1.2_jammy.deb
    python3 -m pip install pyprecice numpy scipy matplotlib vtk mpi4py

